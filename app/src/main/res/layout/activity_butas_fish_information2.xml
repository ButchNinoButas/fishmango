<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8fd2ff"
    tools:context=".ButasFishInformation2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/balik2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="14dp"
            android:src="@drawable/back_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fish Information"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/tamarong1"/>
        <TextView
            android:id="@+id/InsightFishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Tamarong"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/fishdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamarong, also known as damselfish in some regions, is a type of small fish that is often found in tropical and subtropical waters."
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dish List"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inihaw na Tamarong"
            android:textSize="18sp"
            android:paddingVertical="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paksiw na Tamarong"
            android:textSize="18sp"
            android:paddingVertical="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sinugno na Tamarong"
            android:textSize="18sp"
            android:paddingVertical="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bangus Belly Sinigang sa Miso"
            android:textSize="18sp"
            android:paddingVertical="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tinola na Tamarong"
            android:textSize="18sp"
            android:paddingVertical="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pinaputok na Tamarong"
            android:textSize="18sp"
            android:paddingVertical="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escabeche na Tamarong"
            android:textSize="18sp"
            android:paddingVertical="8dp" />

    </LinearLayout>




</LinearLayout>